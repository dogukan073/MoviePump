{
    "editor.formatOnSave": true,
    "python.envFile": "${workspaceFolder}/venv",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "black-formatter.args": [
        "--line-length",
        "100"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "flake8.args": [
        "--max-line-length",
        "100",
    ],
}